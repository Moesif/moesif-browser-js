{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "camelcase": "error",
        "eol-last": "error",
        "eqeqeq": "error",
        "no-unused-vars": "off",
        "indent": "off",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-console": "off",
        "no-trailing-spaces": "error",
        "quotes": [
            "error",
            "single"
        ],
        "no-control-regex": "off",
        "no-useless-escape": "off",
        "semi": [
            "error",
            "always"
        ]
    }
}
